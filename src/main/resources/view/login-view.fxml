<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.doanjava.gradehub.controller.LoginController"
    stylesheets="/style/login-view.css" spacing="0"
    prefWidth="1300" prefHeight="700"

    >
    <children>
        <!-- Left: Login Card -->
        <StackPane alignment="CENTER_LEFT" prefWidth="480" maxHeight="Infinity" HBox.hgrow="ALWAYS" maxWidth="Infinity">
            <children>
                <VBox alignment="CENTER" spacing="0" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                    <children>
                        <VBox alignment="CENTER" spacing="20" maxWidth="Infinity" minWidth="0" styleClass="login-card" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets top="32" right="32" bottom="32" left="32"/>
                            </padding>
                            <!-- Logo above title -->
                            <!--                            <ImageView fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true" VBox.vgrow="NEVER" image="@../asset/image/huflit-logo.png" />-->
                            <Label text="Đăng nhập" styleClass="login-title" />
                            <VBox spacing="10" alignment="CENTER_LEFT" maxWidth="300">
                                <children>
                                    <Label text="Email" styleClass="login-label" />
                                    <TextField fx:id="emailField" promptText="Nhập email" maxWidth="Infinity" />
                                    <Label text="Mật khẩu" styleClass="login-label" />
                                    <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu" maxWidth="Infinity" />
                                    <Label fx:id="errorLabel" text="" styleClass="error-label" visible="false" />
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <CheckBox fx:id="rememberMeCheckBox" text="Ghi nhớ đăng nhập" />
                                        <Pane HBox.hgrow="ALWAYS" />
                                        <Hyperlink text="Quên mật khẩu?" fx:id="forgotPasswordLink" />
                                    </HBox>
                                </children>
                            </VBox>
                            <Button text="Đăng nhập" onAction="#handleLogin" styleClass="login-button" />
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
        <!-- Right: Background Image -->
        <StackPane HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity">
            <children>
                <Pane styleClass="login-bg-pane" maxWidth="Infinity" maxHeight="Infinity" />
            </children>
        </StackPane>
    </children>
</HBox>
